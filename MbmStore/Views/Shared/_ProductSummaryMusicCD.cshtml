@model MbmStore.Models.MusicCD
@using MbmStore.Models;

<div class="row">
    <div class="col-md-2">
        <img src="@Model.ImageFileName" alt="@Model.Title" style="width:100px" />
    </div>
    <div class="col-md-4">
        <strong>Title:</strong> @Model.Title<br />
        <strong>Author:</strong> @Model.Artist<br />
        <strong>Price:</strong>  @String.Format("{0:0.00}", Model.Price)<br />
        <strong>Publisher:</strong> @Model.Released<br />

    </div>
    @await Html.PartialAsync("_AddToCartButton", (Product)Model)
</div>