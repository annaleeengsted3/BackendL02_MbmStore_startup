@model MbmStore.Models.Product
@using MbmStore.Infrastructure;
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="col-md-6">
    <form id="@Model.ProductId" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" name="productId" value="@Model.ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <label for="quantity" style="margin-left:100px">Quantity:</label>
        <select name="quantity" style="float:right">
            @for (int i = 1; i < 11; i++)
            {
                <option value="@i">@i</option>
            }
        </select> <br />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>


